{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "strict": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["ESNext"],
        "skipLibCheck": true,
        "noEmit": true,
        "baseUrl": "."
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
